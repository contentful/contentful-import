#!/usr/bin/env node
var log = require('npmlog')
var runContentfulImport = require('../dist/index')
var usageParams = require('../dist/usageParams')

log.info('Contentful Import Tool: \n Importing data...')

// Give the user sometime to read the welcome message
setTimeout(function () {
  runContentfulImport(usageParams)
  .then((result) => {
    process.exit(0)
  })
  .catch(function (err) {
    log.error('Failed within\n', err)
    process.exit(1)
  })
}, 3000)
