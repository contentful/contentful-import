{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>contentful/renovate-config"],
  "timezone": "UTC",
  "schedule": ["before 1am"],
  "prConcurrentLimit": 15,
  "semanticCommitType": "build",
  "minimumReleaseAge": "15 days",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "description": "Enable npm updates",
      "matchCategories": ["npm"],
      "enabled": true
    },
    {
      "description": "Production dependencies use deps scope",
      "matchDepTypes": ["dependencies"],
      "semanticCommitScope": "deps"
    },
    {
      "description": "Dev dependencies use deps-dev scope",
      "matchDepTypes": ["devDependencies"],
      "semanticCommitScope": "deps-dev"
    },
    {
      "description": "GitHub Actions use gha scope and pin to SHA",
      "matchManagers": ["github-actions"],
      "semanticCommitScope": "gha",
      "pinDigests": true
    }
  ]
}