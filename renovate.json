{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "UTC",
  "schedule": ["before 1am"],
  "semanticCommits": "enabled",
  "semanticCommitType": "build",
  "minimumReleaseAge": "15 days",
  "packageRules": [
    {
      "description": "Production dependencies use deps scope",
      "matchDepTypes": ["dependencies"],
      "semanticCommitScope": "deps"
    },
    {
      "description": "Dev dependencies use deps-dev scope",
      "matchDepTypes": ["devDependencies"],
      "semanticCommitScope": "deps-dev"
    },
    {
      "description": "GitHub Actions use gha scope and pin to SHA",
      "matchManagers": ["github-actions"],
      "semanticCommitScope": "gha",
      "pinDigests": true
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "platformAutomerge": true
    }
  ]
}
